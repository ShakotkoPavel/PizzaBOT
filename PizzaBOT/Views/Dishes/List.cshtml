@model IEnumerable<PizzaBOT.Models.Dish>

@{
    ViewBag.Title = "List of products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create new", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.ImageData == null)
            {
                <div class="col-md-10">
                    <img width="50" height="50" src="~/Content/Images/no.jpeg" />
                </div>
            }
            else
            {
                <div class="col-md-10">
                    <img width="50" height="50" src="@Url.Action("GetImage", "Dishes", new { dishId = item.DishId })" />
                </div>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.DishId }) |
            @Html.ActionLink("Details", "Details", new { id = item.DishId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.DishId })
        </td>
    </tr>
}

</table>
